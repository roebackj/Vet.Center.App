<script>
        function login() {
        const username = document.getElementById("username").value;
        const password = document.getElementById("password").value;
        const errorMessage = document.getElementById("error-message");

        // Reset the error message display
        errorMessage.style.display = "none";

        // Check if the username and password are correct
        if ((username === "A7B2Q3" && password === "PW1") ||
            (username === "X9J4K1" && password === "PW2") ||
            (username === "L8M5R2" && password === "PW3") ||
            (username === "Q3W1E7" && password === "PW4") ||
            (username === "T4Z9X6" && password === "PW5")) {
            // Redirect to the main page
            window.location.href = "Secure.Page.1.html"; // Change this to your main page file name
        } else {
            // Show the error message
            errorMessage.style.display = "block";
        }
    }
</script>

