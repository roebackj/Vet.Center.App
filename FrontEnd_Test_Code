<script>
   document.getElementById("scanBtn").onclick = async function() {
    try {
        const response = await fetch('http://localhost:5000/api/students');
        if (!response.ok) {
            throw new Error('Network response was not ok');
        }
        const students = await response.json();
        const tbody = document.querySelector('#studentTable tbody');
        tbody.innerHTML = ''; // Clear previous results

        students.forEach((student, index) => {
    const row = document.createElement('tr');
    const requiredDocs = getRequiredDocuments(student['Benefit']); // Get required docs based on benefit
    
    // Create the required documents section
    const requiredDocsHTML = requiredDocs ? `
        <span>Added</span>
        <input type="checkbox" style="margin-right: 5px;" onclick="toggleBoxColor(this, 'boxRequired_${index}')">
        <div id="boxRequired_${index}" style="display: inline-block; background-color: #808080; color: white; padding: 5px; border-radius: 5px; width: 100px; text-align: center; margin-right: 5px;">
            ${requiredDocs}
        </div>
    ` : '';

    row.innerHTML = `
        <td>${student.Name}</td>
        <td>${student["Student ID"]}</td>
        <td>${student["Benefit"]}</td>
        <td>
            <span>Added</span>
            <input type="checkbox" style="margin-right: 5px;" onclick="toggleBoxColor(this, 'box1_${index}')">
            <div id="box1_${index}" style="display: inline-block; background-color: #808080; color: white; padding: 5px; border-radius: 5px; width: 60px; text-align: center; margin-right: 5px;">EM</div>
            
            <span>Added</span>
            <input type="checkbox" style="margin-right: 5px;" onclick="toggleBoxColor(this, 'box2_${index}')">
            <div id="box2_${index}" style="display: inline-block; background-color: #808080; color: white; padding: 5px; border-radius: 5px; width: 60px; text-align: center; margin-right: 5px;">SCH</div>

            ${requiredDocsHTML} <!-- Use the styled HTML for required documents -->

            <span style="margin-right: 5px;">Date Checked</span>
            <input type="checkbox" style="margin-right: 5px;" onclick="toggleDate(this, 'dateBox_${index}', 'checkMark_${index}')">
            <span id="checkMark_${index}" style="display: none;"></span>
            <div id="dateBox_${index}" style="display: inline-block; background-color: #add8e6; color: black; padding: 5px; border-radius: 5px; width: 60px; text-align: center;"></div>
        </td>
    `;
        tbody.appendChild(row);
    });
    } catch (error) {
        console.error('Error fetching students:', error);
    }
};

// Function to get required documents based on the benefit
function getRequiredDocuments(benefit) {
    const docs = {
        "1606 Montgomery GI Bill": "COE",
        "Chapter 30 Montgomery GI Bill": "COE",
        "Chapter 31 Vocational Rehabilitation or VR&E": "",
        "Chapter 33 Post 9/11": "COE",
        "Chapter 35 Dependent": "COE",
        "Federal Tuition Assistance or Fed TA": "TAR",
        "Missouri State Tuition Assistance or State TA": "Award Letter",
        "Missouri Returning Heroes": "DD-214",
    };

    return docs[benefit] || ""; // Return the corresponding document or a default message
}


    // Toggle box color function
    function toggleBoxColor(checkbox, boxId) {
        var box = document.getElementById(boxId);
        if (checkbox.checked) {
            box.style.backgroundColor = 'black';
            box.style.color = 'grey';
        } else {
            box.style.backgroundColor = '#808080'; // original color
            box.style.color = 'white'; // original text color
        }
    }
    
    // Toggle date function
    function toggleDate(checkbox, dateBoxId, checkMarkId) {
        var checkMark = document.getElementById(checkMarkId);
        var dateBox = document.getElementById(dateBoxId);

        if (checkbox.checked) {
            checkMark.style.display = 'inline'; // Show check mark
            var today = new Date();
            var formattedDate = (today.getMonth() + 1) + '/' + today.getDate(); // Month is 0-based
            dateBox.textContent = formattedDate; // Set the date in the box
        } else {
            checkMark.style.display = 'none'; // Hide check mark
            dateBox.textContent = ''; // Clear the box
        }
    }

    // Function to open modals
    function openModal(modalId) {
        document.getElementById(modalId).style.display = 'block';
    }

    // Function to close modals
    function closeModal(modal) {
        modal.style.display = 'none';
    }

    // Add event listeners for each button
    document.getElementById("coeBtn").onclick = function() {
        openModal('coeModal');
    };
    document.getElementById("enrollmentBtn").onclick = function() {
        openModal('enrollmentModal');
    };
    document.getElementById("scheduleBtn").onclick = function() {
        openModal('scheduleModal');
    };
    document.getElementById("dd214Btn").onclick = function() {
        openModal('dd214Modal');
    };
    document.getElementById("tarBtn").onclick = function() {
        openModal('tarModal');
    };
    document.getElementById("awardLetterBtn").onclick = function() {
        openModal('awardLetterModal');
    };

    // Close modal when the user clicks on <span> (x)
    const closeButtons = document.getElementsByClassName("close");
    for (let closeButton of closeButtons) {
        closeButton.onclick = function() {
            const modal = closeButton.closest(".modal");
            closeModal(modal);
        };
    }

    // Close modal when clicking outside of the modal
    window.onclick = function(event) {
        for (let modal of document.querySelectorAll('.modal')) {
            if (event.target == modal) {
                closeModal(modal);
            }
        }
    };
</script>

